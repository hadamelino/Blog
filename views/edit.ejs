<%- include("partials/header.ejs") %>

<div class="container mx-5 my-5 justify-content-center align-items-center">
    <h4>Edit your post</h4>
    <form action="/save/<%= idx %>" method="POST">
        <div class="form-group mb-2">
            <label for="titleInput">Title</label>
            <input class="form-control" type="text" name="postTitle" placeholder="Untitled" id="titleInput" required="true" value= <%= title %> >
        </div>
        <div class="form-group">
            <label for="contentInput">Content</label>
            <textarea class="form-control" type="text" name="postContent" id="contentInput" placeholder="Write your post..." required="true"><%= content %></textarea>
        </div>
        <button class="btn btn-success mt-3" type="submit">Save</button>
    </form>
</div>

<%- include("partials/footer.ejs") %>